<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PelangganMitraActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pelanggan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pelanggan"
        android:layout_marginTop="25dp"
        android:padding="15dp"
        app:cornerRadius="15dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="#0F78C9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintBottom_toTopOf="@id/btn_mitra"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mitra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mitra"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        app:cornerRadius="15dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pelanggan"
        />

</androidx.constraintlayout.widget.ConstraintLayout>